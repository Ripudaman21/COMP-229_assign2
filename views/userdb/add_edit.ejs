<body>
    
<!-- Content for the Add_Edit page -->
<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="itemTextField">Name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter the Item Name"
                        name="uname" 
                        value="<%= item.uname %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="QtyTextField">Number</label>
                    <input type="number" class="form-control"
                    id="QtyTextField"
                    placeholder="00"
                    name="unumber" 
                    value="<%= item.unumber %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="itemTextField">Email</label>
                    <input type="text" class="form-control"
                    id="itemTextField"
                    placeholder="Enter the Email"
                    name="uemail" 
                    value="<%= item.uemail %>"
                    required>
                </div>

                     

                       
                    </div>                    
                </div>                
               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/userdb/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

</body>
